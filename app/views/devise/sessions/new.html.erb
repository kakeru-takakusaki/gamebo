<%= render 'shared/login_header' %>

<%= form_with model: @user, url: user_session_path, class: 'user-registration' do |f| %>
  <h2>ログイン</h2>
  <div class="field">
    <div class='form-text-wrap'>
      <%= f.label :email %><br />
    </div>
    <%= f.email_field :email, class:"input-default", autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <div class='form-text-wrap'>
      <%= f.label :password %><br />
    </div>
    <%= f.password_field :password, class:"input-default", autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Log in", class:"sign-btn" %>
  </div>
<% end %>
