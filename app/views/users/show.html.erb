<%= render "shared/header" %>

<div class='content'>
  <%= render "shared/side_bar" %>
  <div class='main'>
    <% if current_user.id == @user.id %>
    <%= link_to 'ステータスを編集する', edit_user_path(current_user), class: 'user-edit-a' %>
    <% end %>
    <div class='upper-user-page-icon'>
      <% if @user.image.attached? %>
        <div class='div-user-page-icon'>
          <%= image_tag @user.image.variant(resize: '420x420') %>
        </div>
      <% else %>
        <div class='div-user-page-icon'>
          <i class="far fa-user normal-icon"></i>
        </div>
      <% end %>
    </div>

    <div class='user-name'><%= @user.nickname %></div>
    <div class='user-text'><%= @user.profile_text %></div>
  </div>
</div>